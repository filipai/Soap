@page
@model IndexModel
@{
    ViewData["Title"] = "Soap Store";
}
<br />
<div class="col-lg-12">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-4 panel panel-default">
            <img class="rounded-circle center-block" src="@product.ImageUrl" alt="Generic placeholder image" width="140" height="140">
            <h4>@product.Name</h4>
            <p>@product.Description</p>
            <p class="text-right">Price: @product.CurrentPrice</p>
            <a asp-page="/Shop/Products/Details" asp-route-id="@(product.ProductId)" class="btn btn-success" role="button">View details »</a>
            <a asp-page="/Shop/Products/Details" asp-route-id="@(product.ProductId)" class="btn btn-danger btn-sm pull-right" role="button">Buy</a>
        </div>
    }
</div>
