@page
@model IndexModel
@{
    ViewData["Title"] = "Soap Store";
}
<br />
<div class="col-lg-12">
    @foreach (var product in Model.Products)
    {
        <a asp-page="/Shop/Products/Details" asp-route-id="@(product.ProductId)">
            <div class="col-lg-3 col-lg-offset-1 panel panel-default">
                <img class="rounded-circle center-block" src="@product.ImageUrl" alt="Generic placeholder image" width="140" height="140">
                <h4>@product.Name</h4>
                <a asp-page="/Shop/Products/Details" asp-route-id="@(product.ProductId)" class="btn btn-danger btn-sm pull-right" role="button"><span class="fa fa-cart-plus"></span></a>
                <p>@product.Description</p>
                <br />
                <p class="text-right">Price: @product.CurrentPrice</p>
            </div>
        </a>
    }
</div>
